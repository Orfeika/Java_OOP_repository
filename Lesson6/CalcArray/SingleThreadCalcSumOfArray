
public class SingleThreadCalcSumOfArray implements Runnable{
	private int [] array; 
	private Thread thr; 
	
	
	
	
	
	public SingleThreadCalcSumOfArray(int[] array) {
		super();
		this.array = array;
		thr = new Thread(this);
		thr.start();
	}






	public int[] getArray() {
		return array;
	}






	public void setArray(int[] array) {
		this.array = array;
	}






	public Thread getThr() {
		return thr;
	}






	@Override
	public void run() {
		int sum=0;
		for(int i = 0 ; i< array.length; i++){
			sum += array[i];
		}
		System.out.println("Sum of an array" + sum);
		
		
		// TODO Auto-generated method stub
		
	}

}
