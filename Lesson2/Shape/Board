
public class Board {
	private Shape board[] = new Shape[4];
	private int counter = 0 ; 
	public double getsumArea(Shape board[]){
		double sumArea=0 ; 
		for (Shape shape : board) {
			sumArea+=shape.getArea();
			
		}
		return sumArea;
	}
	public void addShape(Shape shape){
		if (counter<board.length){
			board[counter]=shape;
			counter ++; 			
		}
		else{
			System.out.println("There is no free place for this figure ");
		}

	}
	public void remove(Shape shape){
			int ind = checkShape(shape); 
			if (ind!=-1){
				for(int i = ind; ind<board.length-2;i++ ){
					board[i] = board[i+1] ; 
				}
				board[board.length-1]=null;
			}
		}

		
	
	public int checkShape(Shape shape){
		for (int i =0; i<board.length;i++){
			if(shape.equals(board[i]) ){
				return i;
			}
		}
		return -1;
		
	}	

}
